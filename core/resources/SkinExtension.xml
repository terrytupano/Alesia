<skin xmlns="http://weblookandfeel.com/XmlSkinExtension">

	<!-- Extension settings -->
	<id>core.resources.SkinExtension</id>
	<class>core.TXmlSkinExtension</class>
	<extends>weblaf.web.skin</extends>
	<extends>weblaf.dark.skin</extends>


	<!-- <style type="panel" id="RightPanel" padding="0,0,0,0"> -->

	<!-- default Jpanel -->
	<style type="panel" padding="0,0,0,0">
		<component>
			<opaque>true</opaque>
			<background>250,250,250</background>
		</component>
		<painter />
	</style>

	<!-- LeftPanel is the panel in left border from main toolbar window -->
	<style type="panel" id="LeftPanel" padding="0,0,0,0">
		<component>
			<opaque>true</opaque>
			<background>30,30,30</background>
		</component>
		<painter />
	</style>


	<!-- navigation buttons Left panel -->
	<style type="button" id="LeftPanelButton" extends="hover"
		padding="0,0,0,0">
		<component>
			<opaque>true</opaque>
			<focusable>false</focusable>
			<background>30,30,30</background>
		</component>
		<painter>
			<decorations>
				<decoration>
					<GradientBackground visible="false" />
					<WebShape round="0" />
					<WebShadow type="outer" width="0" />
					<LineBorder visible="false" />
				</decoration>
				<decoration states="enabled,hover" opacity="0.2" />
				<decoration states="enabled,pressed" opacity="0.2" />

			</decorations>
		</painter>
	</style>

	<!-- Button -->
    <style type="button" padding="2,4,2,4">
		<painter>
			<decorations>
				<decoration>
					<WebShape round="3" />
					<WebShadow type="outer" width="2" />
					<LineBorder color="170,170,170" />
					<GradientBackground>
						<color>250,250,250</color>
						<color>250,250,250</color>
					</GradientBackground>
					<ButtonLayout>
						<ButtonIcon constraints="icon" />
						<ButtonText constraints="text" color="black" />
					</ButtonLayout>
				</decoration>
				<decoration states="focused">
					<LineBorder color="85,130,190" />
				</decoration>
				<decoration states="pressed">
					<WebShadow type="outer" opacity="0" />
					<WebShadow type="inner" width="0" />
					<ColorBackground color="210,210,210" />
				</decoration>
				<decoration states="disabled">
					<WebShadow type="outer" opacity="0" />
					<LineBorder color="lightGray" />
					<ButtonLayout>
						<ButtonText color="120,120,120" />
					</ButtonLayout>
				</decoration>
				<decoration states="enabled,hover">
					<ColorBackground color="lightGray" />
				</decoration>
			</decorations>
		</painter>
	</style>

    <!-- Combobox -->
    <style type="combobox">
        <component>
            <opaque>false</opaque>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="2" />
                    <WebShadow type="outer" width="2" />
                    <LineBorder color="170,170,170" />
                    <GradientBackground>
						<color>250,250,250</color>
						<color>250,250,250</color>
                    </GradientBackground>
                </decoration>
                <decoration states="focused">
                    <LineBorder color="85,130,190" />
                </decoration>
                <decoration states="expanded">
                    <WebShadow type="outer" opacity="0" />
                    <WebShadow type="inner" width="0" />
                    <ColorBackground color="210,210,210" />
                </decoration>
                <decoration states="disabled">
                    <WebShadow type="outer" opacity="0" />
                    <LineBorder color="lightGray" />
                </decoration>
            </decorations>
        </painter>
	</style>

</skin>